- if mobile_device?
  #content
    - form_for(@user_session) do |f|
      - unless self.action_name == 'index'
        .note Existing Group Leader - Login Below
      = error_messages_for :user_session, :header_message => nil, :message => ""
      .cred
        .field-label Email
        = f.text_field :email, :class => 'login text_field'
      .cred
        .field-label Password
        = f.password_field :password, :class => 'login text_field'
      .cred
        Remember me
        = f.check_box :remember_me
      .cred
        = f.submit 'Log In', :class => 'disabled'

    - form_for @user_session, :url => reset_password_request_users_path do |f|
      .note Forgot Username AND/OR Password?
      .cred
        .field-label Enter E-mail Here
        = text_field_tag :email
      .cred
        = f.submit 'Go', :id => 'email_submit', :class => 'disabled'
