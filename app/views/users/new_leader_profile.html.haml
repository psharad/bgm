%tr
%td{:align => "center", :style => "padding: 20px 0px;"}
  %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "762"}
    %tbody
      %tr
        %td{:background => "/images/main/content_bg_word.png", :height => "425", :style => "background-repeat:no-repeat;", :valign => "top", :width => "417"}
          %table{:border => "0", :cellpadding => "0", :cellspacing => "0", :width => "100%"}
            %tbody
              %tr
                %td{:width => "40"}
                  %p{:class => "text3", :style => "font-size:17px; line-height:18px;margin-left:10px;"} Group Leader Profile
                  .notice= clear_notice(notice)
              %tr
                %td
                  - form_tag({:action => :create_leader}, :html => {:method => :get}) do
                    .error
                    .div_main
                      %div{:style => "margin-left: 20px;", :class =>"text3"} All fields are required.
                      .tbl_form{:style =>"display : inline-block;"}
                        %table{:border => "0", :style => "margin-left: 10px;"}
                          %tr
                            %td{:background => "/images/textbox.png", :style => "background-repeat:no-repeat; width:100%;", :valign => "top", :colspan => "2"}
                              = text_field_tag 'group_leader[email]', @fb.email, :class => 'required', :style => "border:none; width:300px; height:37px;padding-left:3px; background:none;"
                          %tr
                            %td{:background => "/images/textbox.png", :style => "background-repeat:no-repeat;", :valign => "top", :colspan => "2"}
                              = password_field_tag 'group_leader[password]', "PASSWORD", :onblur => "this.value=!this.value?'PASSWORD':this.value;", :onclick => "this.value='';", :onfocus => "this.select()", :style => "border:none; width:430px; height:37px;padding-left:3px; background:none;"
                          %tr
                            %td{:background => "/images/textbox.png", :style => "background-repeat:no-repeat;", :valign => "top", :colspan => "2"}
                              = password_field_tag 'group_leader[password_confirmation]', "PASSWORD", :onblur => "this.value=!this.value?'PASSWORD':this.value;", :onclick => "this.value='';", :onfocus => "this.select()", :style => "border:none; width:430px; height:37px;padding-left:3px; background:none;"
                          %tr
                            %td{:rowspan => "4", :colspan => "1"}
                              = image_tag(graph_picture(@fb.id), :height => 150, :width => "160")
                            %td{:background => "/images/small_textbox.png", :style => "background-repeat:no-repeat;", :valign => "top", :colspan => "1"}
                              = select_tag 'group_leader[sex]', options_for_select(['Male', 'Female'], FacebookInfo.get_gender(@fb)), {:class => 'required fb_select', :style => "border:none; width:210px; height:30px; background:none;"}
                          %tr
                            %td{:background => "/images/small_textbox.png", :style => "background-repeat:no-repeat;", :valign => "top"}
                              - age = FacebookInfo.get_age(@fb)
                              = select_tag 'group_leader[age]', options_for_select(list_size_group('age'), age.nil? ? nil : age.to_i), {:class => 'required fb_select', :style => "border:none; width:210px; height:30px; background:none;"}                         
                              = image_tag 'local_offer_spacer.png', :height => '15'
                              = hidden_field_tag 'from_facebook', true
                          %tr
                            %td{:align => "center"}
                              = submit_tag "Continue", :style => "background:url('/images/button.png') no-repeat; margin-top:30px;"
                              %br
                              = link_to image_tag('back.jpg', :style => "margin-top:10px; margin-left: -15px;"), "javascript:void(0);", :onclick => "javascript:window.location = '#{choose_method_facebook_url}'"
                      


