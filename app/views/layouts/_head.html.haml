- if mobile_device?
  %title Conn Sexes
  %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}/
  %meta{"name"=>"viewport", "content"=>"width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1, user-scalable=0"}/
  %meta{"name"=>"HandheldFriendly", "content"=>"True"}/
  %meta{"name"=>"MobileOptimized", "content"=>"240"}/
  %meta{"name"=>"apple-mobile-web-app-capable", "content"=>"yes"}
- else
  %title Connecting Sexes
  %meta{"http-equiv"=>"X-UA-Compatible", "content"=>"IE=9"}/

%link{:rel => "shortcut icon", :href => "/images/connectingsexes-logo.png", :type => "image/x-icon"}
%link{:href => "/images/connectingsexes-logo.png", :rel => "apple-touch-icon-precomposed"}
= stylesheet_link_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8/themes/base/jquery-ui.css'
= stylesheet_link_tag '/javascripts/fancybox/jquery.fancybox-1.3.4.css'
= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js'
= javascript_include_tag '/javascripts/fancybox/jquery.fancybox-1.3.4.pack.js'
= javascript_include_tag '/javascripts/fancybox/jquery.mousewheel-3.0.4.pack.js'
= javascript_include_tag 'popup'
= include_tiny_mce_if_needed

- if apple_device?
  = stylesheet_link_tag 'apple'
  =# javascript_include_tag 'followalong', 'type' => 'application/javascript'
  =# javascript_include_tag 'topfollowalong'
  
  - unless (self.controller_name == 'homes' and self.action_name == 'index') or self.controller_name == 'user_sessions'
    =# javascript_include_tag 'main_bottomAD', 'type' => 'application/javascript'
    
- elsif android_device?
  = stylesheet_link_tag 'android'
- else
  = javascript_include_tag 'homepage', 'jquery.jscrollpane.min'
  = stylesheet_link_tag 'connecting_sexes', 'mainpage', 'admin', 'jquery.jscrollpane'
  
/[if IE]
  = stylesheet_link_tag 'ie.css', 'mainpage', 'admin'
  
= stylesheet_link_tag 'facebox/facebox', 'fluid_grid'

/ = javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.4.4/jquery.min.js'
= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.4/jquery-ui.min.js'
= javascript_include_tag 'application', 'jquery.validate', 'facebox/facebox', 'jquery.ui.autocomplete'

= javascript_include_tag 'ga'
= stylesheet_link_tag 'css'

= yield :head
