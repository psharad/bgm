<% content_for(:head) do %>
<%= stylesheet_link_tag "jquery.Jcrop" %>
<%= javascript_include_tag "jquery.Jcrop.min" %>
<script type="text/javascript" charset="utf-8">
$(function() {
  $('#post_cropbox').Jcrop({
    onChange: update_post_crop,
    onSelect: update_post_crop,
    setSelect: [0, 0, 105, 78],
    minSize: [105, 78],
    aspectRatio: 105/78
  });
});

function update_post_crop(coords) {
  var rx = 100/coords.w;
  var ry = 100/coords.h;
  $('#post_preview').css({
    width: Math.round(rx * <%= @local_offer.post_image_geometry(:large).width %>) + 'px',
    height: Math.round(ry * <%= @local_offer.post_image_geometry(:large).height %>) + 'px',
    marginLeft: '-' + Math.round(rx * coords.x) + 'px',
    marginTop: '-' + Math.round(ry * coords.y) + 'px'
  });
  var ratio = <%= @local_offer.post_image_geometry(:original).width %> / <%= @local_offer.post_image_geometry(:large).width %>;
  $("#crop_x").val(Math.round(coords.x * ratio));
  $("#crop_y").val(Math.round(coords.y * ratio));
  $("#crop_w").val(Math.round(coords.w * ratio));
  $("#crop_h").val(Math.round(coords.h * ratio));
}
</script>
<% end %>

<div id="double"></div>
<div id="admin_content">
  <div class="grid_12">
    <div id="crop_area">
      <%= image_tag @local_offer.image.url(:large), :id => "post_cropbox" %>

      <% form_for @local_offer do |f| %>
        <% for attribute in [:crop_x, :crop_y, :crop_w, :crop_h] %>
          <%= f.hidden_field attribute, :id => attribute %>
        <% end %>
        <div id="double"></div>
        <%= f.submit "Crop", :name => 'save_button' %>
      <% end %>
    </div>
  </div>
</div>
